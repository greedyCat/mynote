<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name></display-name>
	<taglib>
		<taglib-uri>oscache</taglib-uri>
		<taglib-location>/WEB-INF/classes/oscache.tld</taglib-location>
	</taglib>

	<filter>
		<filter-name>CacheFilter</filter-name>
		<filter-class>com.opensymphony.oscache.web.filter.CacheFilter</filter-class>
		<init-param>
			<param-name>time</param-name>
			<param-value>600</param-value>
		</init-param>
		<init-param>
			<param-name>scope</param-name>
			<param-value>session</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>CacheFilter</filter-name>

		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<!-- 编码过滤器 -->
	<filter>
		<filter-name>setCharacterEncoding</filter-name>
		<filter-class>mine.note.impl.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>setCharacterEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>mine.note.impl.LoginFilter</filter-class>
		<init-param>
			<param-name>loginPage</param-name>
			<param-value>/login.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>centerPage</param-name>
			<param-value>/infocenter.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<servlet>

		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>mine.note.impl.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>mine.note.impl.servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MyInfo</servlet-name>
		<servlet-class>mine.note.impl.servlet.MyInfo</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>NewType</servlet-name>
		<servlet-class>mine.note.impl.servlet.NewType</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BackCenter</servlet-name>
		<servlet-class>mine.note.impl.servlet.BackCenter</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DetailShowServlet</servlet-name>
		<servlet-class>mine.note.impl.servlet.DetailShowServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OjectJson</servlet-name>
		<servlet-class>mine.note.impl.servlet.OjectJson</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Upload</servlet-name>
		<servlet-class>mine.util.Upload</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/servlet/LoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/servlet/LogoutServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MyInfo</servlet-name>
		<url-pattern>/servlet/MyInfo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>NewType</servlet-name>
		<url-pattern>/servlet/NewType</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BackCenter</servlet-name>
		<url-pattern>/servlet/BackCenter</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DetailShowServlet</servlet-name>
		<url-pattern>/servlet/DetailShowServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OjectJson</servlet-name>
		<url-pattern>/servlet/OjectJson</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Upload</servlet-name>
		<url-pattern>/servlet/Upload</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.jsp</welcome-file>
	</welcome-file-list>
</web-app>
